<body>

<div id="content" style="height:500px; width:100%; background:#f1f1f1">

</div>   
<input id="t1" type="input" />
<input id="t2" type="button" value="提交" />
<script>

    var socket = io.connect('http://127.0.0.1:3500/test',{
               transports:['websocket']
    });
                    socket.on('fromService', function (data) {
  $("#content").append(data+'<br />');
  });

$("#t2").on("click", function(){
    var self = $("#t1");
    socket.emit('fromClient', self.val());
   $("#content").append('我：'+self.val()+'<br />');
})
  
  
</script>

</body>
